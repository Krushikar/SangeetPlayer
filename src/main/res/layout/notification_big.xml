<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="135dp">


    <ImageView
        android:id="@+id/notify_img"
        android:scaleType="centerCrop"
        android:src="@drawable/album_art1"
        android:layout_centerVertical="true"
        android:layout_width="135dp"
        android:layout_height="135dp"
        />

    <TextView
        android:id="@+id/notify_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/notify_img"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/notify_img"
        android:fontFamily="@font/amaranth"
        android:lines="1"
        android:singleLine="true"
        android:text="Started from the bottom"

        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notify_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notify_song"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"

        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/notify_img"
        android:fontFamily="@font/pt_sans_bold"
        android:lines="1"
        android:singleLine="true"
        android:text="Drake"
        android:textColor="#B1B0B0"
        android:textSize="@dimen/_8ssp"
        android:paddingRight="45dp"
        android:textStyle="bold" />


   <LinearLayout


       android:layout_toRightOf="@id/notify_img"
       android:layout_alignBottom="@id/notify_img"
       android:layout_alignParentRight="true"
       android:layout_marginRight="20dp"
       android:layout_marginBottom="@dimen/_5sdp"
       android:weightSum="3"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="45dp">

       <ImageView

           android:id="@+id/notify_prev"
           android:layout_weight="1"
           android:padding="14dp"
           android:tint="@color/black"
           android:src="@drawable/previous"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>

       <ImageView

           android:id="@+id/notify_play"
           android:layout_weight="1"
           android:src="@drawable/play"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>

       <ImageView

           android:id="@+id/notify_next"
           android:layout_weight="1"
           android:padding="14dp"
           android:tint="@color/black"
           android:src="@drawable/next"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>

   </LinearLayout>



</RelativeLayout>