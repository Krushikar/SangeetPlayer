    <io.github.armcha.coloredshadow.ShadowImageView
        android:id="@+id/sh_image_art"
        android:layout_width="@dimen/_245sdp"
        android:layout_height="@dimen/_245sdp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/total_dur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_artist"
        app:radiusOffset="1" />

    <com.jackandphantom.paletteshadowview.PaletteShadowView
        android:id="@+id/pl_image_art"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/total_dur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_artist"
        app:paletteOffsetX="15"
        app:paletteOffsetY="15"
        app:paletteRoundRadius="10"
        app:paletteShadowRadius="4" />

    <com.mikhaellopez.circleview.CircleView
        android:id="@+id/circleView3"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"

        android:visibility="gone"
        app:cv_shadow="true"
        app:cv_shadow_color="@color/black"
        app:cv_shadow_gravity="center"
        app:cv_shadow_radius="50"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_artist" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circular_image_art"
        android:layout_width="@dimen/_180sdp"

        android:layout_height="@dimen/_180sdp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"


        android:elevation="17dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:civ_border="false"
        app:civ_border_color="@color/black"
        app:civ_border_width="0dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_artist" />

    <TextView
        android:id="@+id/text_song"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/yantramanav_bold"

        android:gravity="center|center_horizontal"
        android:lines="1"
        android:text="Tuscan Leather"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center_horizontal"
        android:lines="1"
        android:text="Drake"
        android:textSize="@dimen/_7ssp"
        app:layout_constraintEnd_toEndOf="@+id/text_song"
        app:layout_constraintStart_toStartOf="@+id/text_song"
        app:layout_constraintTop_toBottomOf="@+id/text_song" />

    <TextView
        android:id="@+id/total_dur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/pt_sans_bold"
        android:text="3:45"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="@+id/seekBar" />

    <TextView
        android:id="@+id/current_dur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/pt_sans_bold"
        android:text="1:45"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintStart_toStartOf="@+id/seekBar" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="25dp"

        android:progress="45"
        android:progressDrawable="@drawable/seekbar_style3"

        android:thumb="@color/black"

        app:layout_constraintBottom_toTopOf="@+id/play_pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/ic_skip_next_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/play_pause"
        app:layout_constraintEnd_toEndOf="@+id/cardView4"
        app:layout_constraintStart_toEndOf="@+id/play_pause"
        app:layout_constraintTop_toTopOf="@+id/play_pause" />

    <ImageView
        android:id="@+id/prev"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/ic_skip_previous"
        app:layout_constraintBottom_toBottomOf="@+id/play_pause"
        app:layout_constraintEnd_toStartOf="@+id/play_pause"
        app:layout_constraintStart_toStartOf="@+id/cardView4"
        app:layout_constraintTop_toTopOf="@+id/play_pause" />

    <ImageView
        android:id="@+id/play_pause"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/round_button3"
        android:elevation="12dp"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_pause_black_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:elevation="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/cardView4"
        app:layout_constraintEnd_toEndOf="@+id/cardView4"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/cardView4"
        app:maxImageSize="25dp"
        app:srcCompat="@android:drawable/ic_media_pause" />

