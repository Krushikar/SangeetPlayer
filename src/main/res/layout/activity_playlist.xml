    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_playlist"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:listitem="@layout/view_tracks" />        />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:background="@drawable/home_top_grad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/total"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_thumb"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/pt_sans_bold"

        android:gravity="center"
        android:padding="5dp"
        android:text="145"
        android:textColor="@color/white"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_condensed_bold"
        android:text="TOTAL"
        android:textColor="@color/black"
        android:textSize="@dimen/_6ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/total"
        app:layout_constraintStart_toStartOf="@+id/total"
        app:layout_constraintTop_toBottomOf="@+id/total" />

    <TextView
        android:id="@+id/current_song"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_thumb"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/pt_sans_bold"
        android:gravity="center"
        android:padding="5dp"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_condensed_bold"
        android:text="CURRENT"
        android:textColor="@color/black"
        android:textSize="@dimen/_6ssp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/current_song"
        app:layout_constraintStart_toStartOf="@+id/current_song"
        app:layout_constraintTop_toBottomOf="@+id/current_song" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/open_sans_condensed_bold"
        android:gravity="center"
        android:text="PLAYLIST"


        android:textColor="@color/red1"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

